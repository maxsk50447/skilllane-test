<div class="form-layout h-100">
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="content-section col-9 main-box p-3">
        <div class="tab-pane" id="add-course" role="tabpanel" aria-labelledby="add-course-tab">
          <h2 class="font-weight-light text-center">Create Course</h2>
          <%= form_for :course, url: courses_path do |f| %>
            <div class="form-group">
              <% if !errors?(@course, :name) %>
                <%= f.text_field :name, placeholder: "Course name", class: "form-control", autofocus: true %>
              <% else %>
                <%= f.text_field :name, placeholder: "Course name", class: "form-control errors-message", autofocus: true %>
              <% end %>
            </div>
            <div class="form-group">
              <% if !errors?(@course, :description) %>
              <%= f.text_area :description, id: "text", placeholder: "Course Description", class: "form-control", autofocus: true %>
              <% else %>
              <%= f.text_area :description, id: "text", placeholder: "Course Description", class: "form-control errors-message", autofocus: true %>
              <% end %>
            </div>
            <div class="form-group"> 
              <div class="row">
                <div class="col-12 col-lg select-container">
                  <%= f.select :course_type, ["Front-end-Development", "Back-end-Development"], class: "form-control", value: "Front-end-Development", autofocus: true %>
                </div>
                <div class="col-sm-6 col-lg">
                  <%= f.text_field :date, class: "form-control" , data: { behavior: 'daterangepicker' } %>
                </div>
                <div class="col-sm-6 col-lg">
                <% if !errors?(@course, :name) %>
                  <%= f.number_field :student_amount, min: 1, placeholder: "Student Amount", class: "form-control", autofocus: true %>
                <% else %>
                  <%= f.number_field :student_amount, min: 1, placeholder: "Student Amount", class: "form-control errors-message", autofocus: true %>
                <% end %>
                </div>
              </div>
            </div>
            <%= f.button "Add Course", type: :submit, class: "btn btn-dark d-block mx-auto" %>
          </form>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>